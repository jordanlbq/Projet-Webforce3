{% extends 'base.html.twig' %}
{% block stylesheets %}
<style>
</style>
    {% endblock %}



{% block content %}
<!-- Material form login -->
<div class="card my-lg-5 d-inline-block offset-5 haa" style=" height: 65vh;">

		<h5 class="card-header info-color white-text text-center py-4">
		  <strong>Connexion</strong>
		</h5>
	  
		<!--Card content-->
		<div class="card-body px-lg-5 pt-5">
	  
		  <!-- Form -->
		  <form method="post" class="text-center" style="color: #757575;" action="{{ path('connexion_check') }}">
	  
			<!-- Email -->
			<div class="md-form pt-5">
			  <input type="text" class="form-control" name="_username" value="{{ lastUsername }}" placeholder="Pseudo" />
			  <label></label>
			</div>
	  
			<!-- Password -->
			<div class="md-form">
			  <input type="password" class="form-control" name="_password" placeholder="Mot de passe">
			  <label></label>
			</div>
	  
	  
			<!-- Sign in button -->
			<button class="btn btn-outline-info btn-rounded btn-block my-4 waves-effect z-depth-0" type="submit">Connexion</button>
	  
			<!-- Register -->
			<p>Pas encore membre ?
			  <a href="{{ path('inscription')}}" class="text-primary">Inscription</a>
			</p>
	  
			<!-- Social login -->
			<p>or sign in with:</p>
			<a type="button" class="btn-floating btn-fb btn-sm">
			  <i class="fab fa-facebook-f"></i>
			</a>
			<a type="button" class="btn-floating btn-tw btn-sm">
			  <i class="fab fa-twitter"></i>
			</a>
			<a type="button" class="btn-floating btn-li btn-sm">
			  <i class="fab fa-linkedin-in"></i>
			</a>
			<a type="button" class="btn-floating btn-git btn-sm">
			  <i class="fab fa-github"></i>
			</a>
	  
		  </form>
		  <!-- Form -->
	  
		</div>
	  
	  </div>
	  <!-- Material form login -->
	
{% endblock %}