{% extends 'base.html.twig' %}
{% block stylesheets %}
<style>
.card{
	margin: 0 auto;
	width: 20%;
	margin-top: 15%;
}
.form-group-submit{
	margin: 0 auto;
	width: 45%;
}
.form-group{
	margin-top: 35px;
}
</style>
    {% endblock %}



{% block content %}
<div class="row-login">
	<div class="col-md-12 col-xs-12 d-flex justify-content-center">
		<div class="card">
			
			<h2 class="card-header info-color white-text text-center py-4">
				<strong>Connexion</strong>
			</h2>

	
	
	
	<form method="post" action="{{ path('connexion_check') }}">
	
		<div class="form-group">
			<input type="text" class="form-control" name="_username" value="{{ lastUsername }}" placeholder="Pseudo" />
		</div>
		
		<div class="form-group">
			<input type="password" class="form-control" name="_password" placeholder="Mot de passe" />
		</div>
		
		<div class="form-group-submit">
			<input type="submit" class="btn btn-primary" value="Connexion"/>
		</div>
	</form>	
	</div>
	</div>
	</div>
	
{% endblock %}