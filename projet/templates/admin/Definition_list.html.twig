{% extends 'base.html.twig' %}

{% block content %}

	<h1>Gestion des définitions</h1>
    <p>Nombre de définitions : {{ def | length }}</p>

    <div class="row p-3">
        <a href="{{ path('admin_user_add') }}" class="btn btn-success"><i class="fas fa-plus-circle"></i> Ajouter une définition</a>
    </div>

    <div>
        <table class=" table table-bordered table-striped">
		
            <thead class="thead-light">
                <tr>
					<th>Id de la vidéo</th>
					<th>description</th>
					<th>termes</th>
					<th>dateUpload</th>
					<th>photo</th>
					<th>videoUrl</th>
					<th>videoUpload</th>
					<th colspan="3">Action</th>
				</tr>
			</thead>
			
			<tbody>
				
{% for m in def %}
<tr>
	<td>{{ m.id }}</td>
	<td>{{ m.description }}</td>
	<td>{{ m.termes }}</td>
    <td>{{ m.dateUpload }}</td>
    <td>{{ m.photo }}</td>
    <td>{{ m.videoUrl }}</td>
    <td>{{ m.videoUpload }}</td>
</tr>

	
	{# <td>
		<a href="{{ path('admin_user_fiche', {id : m.id}) }}">
			<i class="fas fa-eye"></i>
		</a>
	</td> #}
	<td>
		<a href="{{ path('admin_user_update', {id : m.id}) }}">
			<i class="fas fa-edit"></i>
		</a>
	</td>
	<td>
		<a href="{{ path('admin_user_delete', {id : m.id}) }}" onclick="return confirm('Etes-vous certain de vouloir supprimer le membre ?')">
			<i class="fas fa-trash-alt"></i>
		</a>
	</td>
	
</tr>
{% endfor %}
				
				
				
				
				
			</tbody>
			
		</table>
	</div>
	
	
	
	

{% endblock  %}